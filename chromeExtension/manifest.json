{
    "manifest_version": 3,
    "name": "JioSaavn Downloader",
    "version": "1.3",
    "description": "Downloads music in Hi-def from JioSaavn",
    "permissions": ["webRequest", "downloads"],
    "host_permissions": [
        "https://www.jiosaavn.com/*",
        "https://aac.saavncdn.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "./assets/logo_16.png",
        "48": "./assets/logo_48.png",
        "128": "./assets/logo_128.png"
    }
}
